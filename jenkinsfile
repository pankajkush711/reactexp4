pipeline {
    agent any

    tools {
        nodejs "NodeJS_16"   // Make sure NodeJS 16+ is configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pankajkush711/reacrexp4.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Start React App') {
            steps {
                sh 'nohup npm start &'
                sleep(time: 10, unit: 'SECONDS') // wait for server to start
            }
        }

        stage('Run Selenium Tests') {
            steps {
                sh 'npm run test:ui'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished. Cleaning up..."
        }
    }
}
